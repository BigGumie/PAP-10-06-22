#Imports 
from time import process_time_ns
from urllib.request import urlopen
import json
import smtplib
from cProfile import run
import speech_recognition as sr
from googlesearch import search
import pyttsx3
import pywhatkit
import datetime
import wikipedia
import pyjokes
import sys
import subprocess as sp
import smtplib
import os
from pprint import pprint

listener = sr.Recognizer()
engine = pyttsx3.init()
voices = engine.getProperty('voices')
engine.setProperty('voice', voices[1].id)

def talk(text):
    engine.say(text)
    engine.runAndWait()

def wishMe():
    talk("Welcome back sir")
    print("Welcome back sir")
    hour = int(datetime.datetime.now().hour)
    print(hour)
    year = int(datetime.datetime.now().year)
    month = int(datetime.datetime.now().month)
    date = int(datetime.datetime.now().day)
    Time = datetime.datetime.now().strftime("%I:%M:%S") 
    print(Time)
    print(date)
    print(month)
    print(year)
    talk("the current Time is")
    talk(Time)
    talk("the current Date is")
    talk(date)
    talk(month)
    talk(year)
    if hour>=6 and hour<12:
        talk("Good Morning")
        print("Good Morning")

    elif hour>=12 and hour<18:
        talk("Good Afternoon")
        print("Good Afternoon")

    elif hour>=18 and hour<20:
        talk("Good Evening")
        print("Good Evening")

    else:
        talk("Good Night")
        print("Good Night")

    talk("Hello my name is Hal, how may I help?")
    print("Hello my name is Hal, how may I help?")
wishMe()

def take_command():
    try:
        with sr.Microphone() as source:
            print('listening...')
            voice = listener.listen(source)
            command = listener.recognize_google(voice)
            command = command.lower()
            if 'Lucky' in command:
                command = command.replace('Lucky', '')
                print(command)
    except:
        pass
    return command

def run_lucky():

    command = take_command()
    print(command)

    #Responds when the user says hello
    if "hello" in command:
        talk("Greetings")

    #Plays a song on youtube
    elif 'play' in command:
        song = command.replace('play', '')
        talk('playing ' + song)
        pywhatkit.playonyt(song)


    #Tells the current time
    elif 'time' in command:
        time = datetime.datetime.now().strftime('%I:%M %p')
        talk('Current time is ' + time)

    elif 'weather' in command:
        file = open("Weather.json", "r")
        data_json = file.read()
        file.close()
        Weather = json.loads(data_json)

        print("The weather for the next 7 days will be")
        print(Weather[1])
        print(Weather[2])
        print(Weather[3])
        print(Weather[4])
        print(Weather[5])
        print(Weather[6])
        print(Weather[7])
        print("Information available by IPMA.pt")

    #Tells the current time
    elif 'email' in command:
        print('Please choose your email')
        with sr.Microphone() as source:
            print('listening...')
            voice = listener.listen(source)
            command = listener.recognize_google(voice)
            command = command.lower()
            print(command)
            if "text" in command:
                sender_email = "lolgumie@gmail.com"
                password = input(str("Please enter your password: "))
                rec_email = input(str("Please enter the person email you want to send: "))
                talk('What is the message you want to send?')
                print('What is the message you want to send?')
                with sr.Microphone() as source:
                    print('listening...')
                    voice = listener.listen(source)
                    command = listener.recognize_google(voice)
                    command = command.lower()
                    print(command)
                    server = smtplib.SMTP('smtp.gmail.com', 587)
                    server.starttls()
                    server.login(sender_email, password)
                    print("Login success")
                    server.sendmail(sender_email, rec_email, command)
                    print("Email has been sent to ", rec_email)
            else: 
                print('No email associated with that name')
                talk('No email associated with that name')

    #Goes to google and seach for anything
    elif 'search' in command:
            talk('What do you want to search?')
            with sr.Microphone() as source:
                print('listening...')
                voice = listener.listen(source)
                command = listener.recognize_google(voice)
                command = command.lower()
                print(command)
            for i in search(command, tld="co.in", num=5, stop=5, pause=2):
                print(i)

    #Says the bio about the figure searched
    elif 'who is' in command:
        person = command.replace('who is', '')
        info = wikipedia.summary(person, 1)
        print(info)
        talk(info)

    #Goes to wikipidia and tells an short resume about the subject searched for
    elif 'what is' in command:
        subject = command.replace('what is', '')
        info = wikipedia.summary(subject, 1)
        print("According to wikipedia, "+info)
    
    #My own joke
    elif 'are you single' in command:
        talk('I am in a relationship with wifi')

    #Opens any applications in the system
    elif 'open' in command:
        command.replace('Open','')
        os.system('explorer C://{}'.format())

    #Tells a joke 
    elif 'joke' in command:
        talk(pyjokes.get_joke())

    #Closes the program
    elif "shutdown" in command:
            talk("Goodbye")
            print("Goodbye")
            sys.exit()

    else:
        talk('Please say the command again.')

while True:
    run_lucky()
